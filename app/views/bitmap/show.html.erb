<h1 align="center"> <span class="label label-default">DEMO BITMAP SIMULATOR</span></h1>

<div class="row" style="margin-top: 20px">
  <%= form_for :input,:url => { :controller => "bitmap", :action => "run_commands" }, :html => {:method => :post} do |f| %>
  <div class="col-lg-5 col-md-5 col-sm-5">
  	<h3 align="center"><span class="label label-success">Input Commads</span></h3>
    <div class="input-group">
      <span class="input-group-addon">
      </span>
      <%= f.text_area :commands, class: "form-control", style: "resize: none; height: 420px", :value => @commands_in_show %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->

  <div class="col-lg-2 col-md-2 col-sm-2" align="center" style="margin-top: 10%">
    <div class="input-group">
      <span class="">
      </span>
	  <%= f.submit "RUN", class: "btn btn-default" do%>
	  <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
  <% end  %>

  <div class="col-lg-5 col-md-5 col-sm-5">
  	<h3 align="center"><span class="label label-success">Output</span></h3>
    <div class="input-group">
      <span class="input-group-addon">
      </span>
      <div class="form-control",  style="overflow-y:auto; white-space:nowrap; min-height: 420px;" >
      <% if @output.kind_of?(Array) %>
      	<% @output.each do |row| %>
        	<li style="list-style: none;"><%= row %></li>
	    <% end %>
	  <% else %>
	  	<%= @output %>
	  <% end %>
      </div>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
